# Notification Service Configuration

# Service
SERVICE_NAME=notification-service
SERVICE_PORT=8004

# Database (Independent PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:1234@localhost:5436/notification_db

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@geoattend.com
SMTP_FROM_NAME=GeoAttend

# Firebase Cloud Messaging (Push Notifications)
FCM_CREDENTIALS_PATH=path/to/firebase-credentials.json
FCM_ENABLED=false

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:8001
COURSE_SERVICE_URL=http://localhost:8002
ATTENDANCE_SERVICE_URL=http://localhost:8003

# Notification Settings
MAX_RETRIES=3
RETRY_DELAY=60
