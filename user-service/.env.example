# User Service Environment Variables

# Service Configuration
SERVICE_NAME=user-service
SERVICE_PORT=8001
DEBUG=true

# Database - Independent PostgreSQL instance
DATABASE_URL=postgresql+asyncpg://postgres:1234@localhost:5433/user_db

# Security
SECRET_KEY=user-service-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# Inter-service URLs
COURSE_SERVICE_URL=http://localhost:8002
ATTENDANCE_SERVICE_URL=http://localhost:8003